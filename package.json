{
  "name": "preact-starter",
  "type": "module",
  "version": "1.0.0",
  "description": "Barebones starter for a preact project",
  "main": "dist/index.js",
  "scripts": {
    "build": "vite build",
    "serve": "vite preview",
    "start": "vite",
    "lint": "prettier --no-error-on-unmatched-pattern --check **/*.{js,jsx,ts,tsx,css,md,html,yml,yaml,json}",
    "lint:fix": "prettier --no-error-on-unmatched-pattern --write **/*.{js,jsx,ts,tsx,css,md,html,yml,yaml,json}",
    "prepare": "husky"
  },
  "author": "Andre Wiggins",
  "license": "MIT",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,css,md,html,yml,yaml,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "preact": "^10.22.1"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.9.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "vite": "^5.3.3"
  },
  "volta": {
    "node": "22.4.1"
  }
}
